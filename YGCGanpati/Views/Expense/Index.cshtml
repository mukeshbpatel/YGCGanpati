@model IEnumerable<YGCGanpati.Models.Expense>

@{
    ViewBag.Title = "Expense";
}

<h2><i class="fa fa-share"></i> @ViewBag.Title</h2>

@if (User.IsInRole("Admin") | User.IsInRole("Manager"))
{
    <div class="pull-right">
        &nbsp;  <a href="@Url.Action("Create")"><i class="fa fa-plus-square"></i> Add New</a>
    </div>
}




<table id="tbl" class="table table-sm table-hover table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseAmount)
            </th>
            @if (User.IsInRole("Admin") | User.IsInRole("Manager"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseDate)
                </td>
                <td class="right">
                    @Html.DisplayFor(modelItem => item.ExpenseAmount)
                </td>
                @if (User.IsInRole("Admin") | User.IsInRole("Manager"))
                {
                    <td>
                        <a href="@Url.Action("Details", new { id = item.ExpenseID })"><i class="fa fa-info-circle"></i></a>
                        <a href="@Url.Action("Edit", new { id = item.ExpenseID })"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.ExpenseID })"><i class="fa fa-remove"></i></a>
                    </td>
                }
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Total</th>
            <th></th>
            <th id="total">@Model.Sum(s => s.ExpenseAmount)</th>
            @if (User.IsInRole("Admin") | User.IsInRole("Manager"))
            {
                <th></th>
            }
            </tr>
    </tfoot>
</table>

