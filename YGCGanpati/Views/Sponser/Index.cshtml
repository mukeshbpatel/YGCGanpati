@model IEnumerable<YGCGanpati.Models.Sponser>

@{
    ViewBag.Title = "Sponsers";
}

<h2>Sponsers</h2>

@if (User.IsInRole("Admin") | User.IsInRole("Manager"))
{
    <div class="pull-right">
        &nbsp;  <a href="@Url.Action("Create")"><i class="fa fa-plus-square"></i> Add New</a>
    </div>
}
<table id="tbl" class="table table-sm table-hover table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        @if (User.IsInRole("Admin") | User.IsInRole("Manager"))
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="ICapital">
                @Html.DisplayFor(modelItem => item.Name)
                (@Html.DisplayFor(modelItem => item.FlatNo))
            </td>
            <td class="ICapital">
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            @if (User.IsInRole("Admin") | User.IsInRole("Manager"))
            {
                <td>
                    <a href="@Url.Action("Details", new { id = item.SponserID })"><i class="fa fa-info-circle"></i></a>
                    <a href="@Url.Action("Edit", new { id = item.SponserID })"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.SponserID })"><i class="fa fa-remove"></i></a>
                </td>
            }
        </tr>
    }

</table>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl').DataTable({
            "paging": false
        });

        $('#tbl_filter').addClass('pull-right');
    });
</script>